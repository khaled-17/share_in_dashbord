generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("REVIEWS_DATABASE_URL")
  directUrl = env("REVIEWS_DIRECT_URL")
}

model CustomerReview {
  id        String   @id @default(uuid())
  name      String
  role      String?
  review    String
  rating    Int      @default(5)
  avatar    String?
  createdAt DateTime @default(now())
}
